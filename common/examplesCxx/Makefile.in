#
# examples/cc//Makefile.in  --
#
# Makefile for Visualization Toolkit C++ examples.
# 
#------------------------------------------------------------------------------
#
SHELL = /bin/sh
.SUFFIXES: .cxx

srcdir        = @srcdir@
VPATH         = @srcdir@
VTK_LIB_FILE  = @VTK_LIB_FILE@

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in user.make

@MAKEINCLUDE@ @MAKEQUOTE@../../system.make@MAKEQUOTE@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@../../user.make@MAKEQUOTE@

#-----------------------------------------------------------------------------

EXAMPLES = otherJacobi \
	otherMath \
	otherMatrix4x4 \
	otherLotkin \
	otherCellBoundaries \
	otherCellPosition \
	otherRectilinearGrid \
	otherStructuredGrid \
	otherArrays
  
CXX_FLAGS = ${CPPFLAGS} ${USER_CXXFLAGS} ${CXXFLAGS} -I${srcdir} \
	${KIT_FLAGS} -I. -I../../common \
	 -I${srcdir}/../../common -I${srcdir}/..

VTKLIB = ${VTK_LIB_FILE}

LDLIBS = ${VTK_LIB_FILE} ${DL_LIBS} ${THREAD_LIBS}

.cxx.o:
	${CXX} ${CXX_FLAGS} -c $< -o $@

#------------------------------------------------------------------------------
#

all: ${EXAMPLES}

otherJacobi: otherJacobi.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherJacobi ${CXX_FLAGS} otherJacobi.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherCellBoundaries: otherCellBoundaries.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherCellBoundaries ${CXX_FLAGS} otherCellBoundaries.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherCellPosition: otherCellPosition.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherCellPosition ${CXX_FLAGS} otherCellPosition.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherLotkin: otherLotkin.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherLotkin ${CXX_FLAGS} otherLotkin.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherArrays: otherArrays.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherArrays ${CXX_FLAGS} otherArrays.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherMath: otherMath.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherMath ${CXX_FLAGS} otherMath.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherMatrix4x4: otherMatrix4x4.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherMatrix4x4 ${CXX_FLAGS} otherMatrix4x4.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherRectilinearGrid: otherRectilinearGrid.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherRectilinearGrid ${CXX_FLAGS} otherRectilinearGrid.o \
	rtOtherTestBase.o ${LDLIBS} -lm
otherStructuredGrid: otherStructuredGrid.o rtOtherTestBase.o ${VTKLIB}
	${CXX} -o otherStructuredGrid ${CXX_FLAGS} otherStructuredGrid.o \
	rtOtherTestBase.o ${LDLIBS} -lm
# ${XLDFLAGS}
#------------------------------------------------------------------------------

clean:
	-rm -f ${EXAMPLES} *.o 

