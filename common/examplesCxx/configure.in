#
# configure script for vtk example directory
#
AC_INIT(otherJacobi.cxx)

VTK_LIB_FILE="../../common/libVTKCommon\${VTK_LIB_EXT}"


AC_ARG_WITH(shared,
         [  --with-shared               create shared libraries],
         [vtk_shared_ok=$withval], [vtk_shared_ok=no])

AC_SUBST(VTK_LIB_FILE)


# option for handling BSD style makefile includes
#
AC_ARG_WITH(bsdmake,
         [  --with-bsdmake            uses bsd style makefile includes],
	 if test "$withval" = yes; then
         MAKEINCLUDE=".include"
         MAKEQUOTE='"'
         fi,
         MAKEINCLUDE="include"
         MAKEQUOTE='')
AC_SUBST(MAKEINCLUDE)
AC_SUBST(MAKEQUOTE)

dnl Checks for library functions.
AC_OUTPUT(Makefile)


