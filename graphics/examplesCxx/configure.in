#
# configure script for vtk example directory
#
AC_INIT(VisQuad.cxx)

VTK_LIB_FILE="../libVTKGraphics\${VTK_LIB_EXT} ../../common/libVTKCommon\${VTK_LIB_EXT}"

# if using patents we also need patents library
AC_ARG_WITH(patented,
   [  --with-patented           include the patented classes],
     VTK_LIB_FILE="../../patented/libVTKPatented\${VTK_LIB_EXT} ../libVTKGraphics\${VTK_LIB_EXT} ../../common/libVTKCommon\${VTK_LIB_EXT}"
  ,)

AC_SUBST(VTK_LIB_FILE)

# option for handling BSD style makefile includes
#
AC_ARG_WITH(mesa,
         [  --with-bsdmake            uses bsd style makefile includes],
         MAKEINCLUDE=".include"
         MAKEQUOTE='"',
         MAKEINCLUDE="include"
         MAKEQUOTE='')
AC_SUBST(MAKEINCLUDE)
AC_SUBST(MAKEQUOTE)

dnl Checks for library functions.
AC_OUTPUT(Makefile)


