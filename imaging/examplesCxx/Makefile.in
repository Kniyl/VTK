#
# examples/cc//Makefile.in  --
#
# Makefile for Visualization Toolkit C++ examples.
# 
#------------------------------------------------------------------------------
#
SHELL = /bin/sh
.SUFFIXES: .cxx

srcdir        = @srcdir@
VPATH         = @srcdir@
VTK_LIB_FILE  = @VTK_LIB_FILE@

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in user.make

@MAKEINCLUDE@ @MAKEQUOTE@../../system.make@MAKEQUOTE@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@../../user.make@MAKEQUOTE@

#-----------------------------------------------------------------------------

EXAMPLES = ScalarBar ImportExport

CXX_FLAGS = ${CPPFLAGS} ${USER_CXXFLAGS} ${CXXFLAGS} -I${srcdir} \
	${KIT_FLAGS} -I. ${GRAPHICS_API_FLAGS} \
	-I${srcdir}/../../common -I${srcdir}/../../graphics \
	-I${srcdir}/../../imaging

VTKLIB = ${VTK_LIB_FILE}

LDLIBS = ${VTK_LIB_FILE} ${XLIBS} ${GRAPHICS_API_LIBS} ${DL_LIBS} ${THREAD_LIBS}

.cxx.o:
	${CXX} ${CXX_FLAGS} -c $< -o $@

#------------------------------------------------------------------------------
#

all: ${EXAMPLES}

ScalarBar: ScalarBar.o ${VTKLIB}
	${CXX} -o ScalarBar ${CXX_FLAGS} ScalarBar.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

ImportExport: ImportExport.o ${VTKLIB}
	${CXX} -o ImportExport ${CXX_FLAGS} ImportExport.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

#------------------------------------------------------------------------------

clean:
	-rm -f ${EXAMPLES} *.o 

