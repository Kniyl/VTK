#
# examples/cc//Makefile.in  --
#
# Makefile for Visualization Toolkit C++ examples.
# 
#------------------------------------------------------------------------------
#
SHELL = /bin/sh
.SUFFIXES: .cxx

srcdir        = @srcdir@
VPATH         = @srcdir@
VTK_LIB_FILE  = @VTK_LIB_FILE@

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in user.make

@MAKEINCLUDE@ @MAKEQUOTE@../../system.make@MAKEQUOTE@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@../../user.make@MAKEQUOTE@

#-----------------------------------------------------------------------------

EXAMPLES = TestPolyDataPort \
	TestStructuredPointsPort \
        TestImagePort \
	TestStructuredGridPort \
	ParallelIso \
	DataParallelism

CXX_FLAGS = ${CPPFLAGS} ${USER_CXXFLAGS} ${CXXFLAGS} -I${srcdir} \
	${KIT_FLAGS} -I. ${GRAPHICS_API_FLAGS} ${CONTROLLER_API_FLAGS} \
	 -I${srcdir}/../../common -I${srcdir}/.. -I${srcdir}/../../patented \
	-I${srcdir}/../../imaging -I${srcdir}/../../graphics -I../../common

VTKLIB = ${VTK_LIB_FILE}

LDLIBS =-L../../common -L../../graphics -L../../parallel -L../../imaging \
	-L../../patented \
	${VTK_LIB_FILE} ${XLIBS} ${GRAPHICS_API_LIBS} ${DL_LIBS} \
	${THREAD_LIBS} ${CONTROLLER_API_LIBS} -lXext -lXt -lX11  -lm

.cxx.o:
	${CXX} ${CXX_FLAGS} -c $< -o $@

#------------------------------------------------------------------------------
#

all: ${EXAMPLES}

DataParallelism: DataParallelism.o composite.o
	${CXX} -o TestMPI ${CXX_FLAGS} DataParallelism.o composite.o \
	${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestMPI: TestMPI.o 
	${CXX} -o TestMPI ${CXX_FLAGS} TestMPI.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestController: TestController.o 
	${CXX} -o TestController ${CXX_FLAGS} TestController.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestPolyDataPort: TestPolyDataPort.o
	${CXX} -o TestPolyDataPort ${CXX_FLAGS} TestPolyDataPort.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestImagePort: TestImagePort.o
	${CXX} -o TestImagePort ${CXX_FLAGS} TestImagePort.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestStructuredPointsPort: TestStructuredPointsPort.o
	${CXX} -o TestStructuredPointsPort ${CXX_FLAGS} TestStructuredPointsPort.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

TestStructuredGridPort: TestStructuredGridPort.o
	${CXX} -o TestStructuredGridPort ${CXX_FLAGS} TestStructuredGridPort.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

ParallelIso: ParallelIso.o
	${CXX} -o ParallelIso ${CXX_FLAGS} ParallelIso.o ${XLDFLAGS} ${LDLIBS} \
	${XLIBS} -lXext -lXt ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} -lm

#------------------------------------------------------------------------------

clean:
	-rm -f ${EXAMPLES} *.o 

