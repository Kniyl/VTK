#
# configure script for vtk example directory
#
AC_INIT(medical1.cxx)

VTK_LIB_FILE="../../imaging/libVTKImaging\${VTK_LIB_EXT} ../../graphics/libVTKGraphics\${VTK_LIB_EXT} ../../common/libVTKCommon\${VTK_LIB_EXT}"


# if using patents we also need patents library
AC_ARG_WITH(patented,
         [  --with-patented           include the patented classes],
	 if test "$withval" = yes; then
     VTK_LIB_FILE="../../patented/libVTKPatented\${VTK_LIB_EXT} ${VTK_LIB_FILE}"
         fi,)

AC_ARG_WITH(shared,
         [  --with-shared               create shared libraries],
         [vtk_shared_ok=$withval], [vtk_shared_ok=no])

# if not using shared libraries, then repeat libraries twice to handle
# circular dependencies
if test "$vtk_shared_ok" = "no"; then
     VTK_LIB_FILE="${VTK_LIB_FILE} ${VTK_LIB_FILE}"
fi

AC_SUBST(VTK_LIB_FILE)


# option for handling BSD style makefile includes
#
AC_ARG_WITH(bsdmake,
         [  --with-bsdmake            uses bsd style makefile includes],
	 if test "$withval" = yes; then
         MAKEINCLUDE=".include"
         MAKEQUOTE='"'
         fi,
         MAKEINCLUDE="include"
         MAKEQUOTE='')
AC_SUBST(MAKEINCLUDE)
AC_SUBST(MAKEQUOTE)

dnl Checks for library functions.
AC_OUTPUT(Makefile)


